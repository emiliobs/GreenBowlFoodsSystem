@model GreenBowlFoodsSystem.ViewModel.DashboardViewModel
@{
    ViewData["Title"] = "Executive Dashboard";
    var username = Context.Session.GetString("UserSession");
    var ukCulture = System.Globalization.CultureInfo.GetCultureInfo("en-GB");
}

<style>
    /* Custom CSS to override Bootstrap blue pills with Green Bowl Green */
    .nav-pills-green .nav-link.active,
    .nav-pills-green .show > .nav-link {
        background-color: #10b981 !important; /* Nuestro verde principal */
        color: white !important;
    }

    .nav-pills-green .nav-link {
        color: #a3e635; /* Un verde más claro para los inactivos, para contraste */
        transition: all 0.3s ease;
    }

        .nav-pills-green .nav-link:hover:not(.active) {
            background-color: rgba(16, 185, 129, 0.1); /* Fondo verde sutil al pasar el mouse */
            color: #10b981;
        }
</style>

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="container-fluid animate-fade-up">

        @if (username != null)
        {
            <div class="d-flex justify-content-between align-items-end mb-5">
                <div>
                    <h1 class="display-5 fw-bold text-white mb-0">Welcome back, <span class="text-success">@username</span>!</h1>
                    <p class="text-white-50">Operational Overview | London UK - HQ</p>
                </div>
                <div class="text-end d-none d-md-block">
                    <h4 class="text-white mb-0">@DateTime.Now.ToString("dddd, dd MMMM")</h4>
                    <span class="badge bg-dark border border-secondary text-white-50">System v1.0</span>
                </div>
            </div>

            <div class="row g-4 mb-5">
                <div class="col-xl-3 col-md-6">
                    <div class="card border-0 shadow-lg h-100" style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%); border-bottom: 4px solid #10b981;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="text-white-50 text-uppercase small ls-1 mb-0">Inventory Value</h6>
                                <i class="bi bi-currency-pound text-success fs-4"></i>
                            </div>
                            <h2 class="display-6 fw-bold text-white mb-0">@Model.TotalInventoryValue.ToString("C0", ukCulture)</h2>
                            <small class="text-success"><i class="bi bi-graph-up-arrow me-1"></i>Total Assets</small>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card border-0 shadow-lg h-100" style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%); border-bottom: 4px solid #38bdf8;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="text-white-50 text-uppercase small ls-1 mb-0">Logistics</h6>
                                <i class="bi bi-truck text-info fs-4"></i>
                            </div>
                            <h2 class="display-6 fw-bold text-white mb-0">@Model.ActiveShipmentsCount</h2>
                            <small class="text-info">Shipments on route</small>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card border-0 shadow-lg h-100" style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%); border-bottom: 4px solid #f87171;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="text-white-50 text-uppercase small ls-1 mb-0">Quality Fails (24h)</h6>
                                <i class="bi bi-shield-exclamation text-danger fs-4"></i>
                            </div>
                            <h2 class="display-6 fw-bold text-white mb-0">@Model.QualityIssuesToday</h2>
                            <small class="text-danger">Action required</small>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card border-0 shadow-lg h-100" style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%); border-bottom: 4px solid #fbbf24;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="text-white-50 text-uppercase small ls-1 mb-0">Expiry Risk</h6>
                                <i class="bi bi-hourglass-split text-warning fs-4"></i>
                            </div>
                            <h2 class="display-6 fw-bold text-white mb-0">@Model.ExpiringSoonCount</h2>
                            <small class="text-warning">Items expiring (7 days)</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4">

                <div class="col-lg-8">
                    <div class="card shadow-lg border-0 h-100" style="background: #1e293b;">

                        <div class="card-header bg-transparent border-0 pt-4 px-4">
                            <ul class="nav nav-pills card-header-pills  nav-pills-green" id="dashboardTab" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active btn-sm" id="production-tab" data-bs-toggle="tab" data-bs-target="#production" type="button" role="tab">Production</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link  btn-sm " id="logistics-tab" data-bs-toggle="tab" data-bs-target="#logistics" type="button" role="tab">Logistics</button>
                                </li>
                            </ul>
                        </div>

                        <div class="card-body p-0">
                            <div class="tab-content" id="dashboardTabContent">

                                <div class="tab-pane fade show active" id="production" role="tabpanel">
                                    <div class="table-responsive">
                                        <table class="table table-dark table-hover mb-0 align-middle">
                                            <thead class="text-white-50 small text-uppercase">
                                                <tr>
                                                    <th class="ps-4">Batch #</th>
                                                    <th>Product</th>
                                                    <th>Status</th>
                                                    <th class="text-end pe-4">Date</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var batch in Model.RecentBatches)
                                                {
                                                    string badgeClass = batch.Status switch 
                                                    { 
                                                        "Completed" => "bg-success", 
                                                        "In Progress" => "bg-primary", 
                                                        "QA Hold" => "bg-danger", 
                                                        _ => "bg-secondary" 
                                                    };
                                                    <tr>
                                                        <td class="ps-4 text-info font-monospace">@batch.BatchNumber</td>
                                                        <td class="fw-bold">@batch.FinishedProduct?.ProductName</td>
                                                        <td><span class="badge @badgeClass rounded-pill">@batch.Status</span></td>
                                                        <td class="text-end pe-4 text-info small">@batch.ProductionDate)</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <div class="tab-pane fade" id="logistics" role="tabpanel">
                                    <div class="table-responsive">
                                        <table class="table table-dark table-hover mb-0 align-middle">
                                            <thead class="text-white-50 small text-uppercase">
                                                <tr>
                                                    <th class="ps-4">Tracking</th>
                                                    <th>Customer</th>
                                                    <th>Status</th>
                                                    <th class="text-end pe-4">Date</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var ship in Model.RecentShipments)
                                                {
                                                    string badgeClass = ship.Status == "Delivered" ? "bg-success" : "bg-warning text-dark";
                                                    <tr>
                                                        <td class="ps-4 text-warning font-monospace">@ship.TrackingNumber</td>
                                                        <td class="fw-bold">@ship.Customer?.CustomerName</td>
                                                        <td><span class="badge @badgeClass rounded-pill">@ship.Status</span></td>
                                                        <td class="text-end pe-4 text-info small">@ship.Date</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">

                    <div class="card shadow-lg border-0 mb-3" style="background: #1e293b;">
                        <div class="card-header bg-transparent border-0 pt-3 px-4">
                            <h6 class="text-white mb-0 text-danger"><i class="bi bi-arrow-down-circle me-2"></i>Low Product Stock</h6>
                        </div>
                        <div class="card-body pt-0">
                            @if (Model.LowStockProducts.Any())
                            {
                                <ul class="list-group list-group-flush">
                                    @foreach (var item in Model.LowStockProducts)
                                    {
                                        <li class="list-group-item bg-transparent text-white border-secondary px-0 py-2">
                                            <div class="d-flex justify-content-between mb-1">
                                                <small>@item.ProductName</small>
                                                <small class="text-danger fw-bold">@item.QuantityAvailable Units</small>
                                            </div>
                                            <div class="progress" style="height: 4px; background-color: #334155;"><div class="progress-bar bg-danger" style="width: 25%;"></div></div>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {

                                <p class="text-success small my-2">Healthy Levels</p>
                            }
                        </div>
                    </div>

                    <div class="card shadow-lg border-0 mb-4" style="background: #1e293b;">
                        <div class="card-header bg-transparent border-0 pt-3 px-4">
                            <h6 class="text-white mb-0 text-warning"><i class="bi bi-exclamation-triangle me-2"></i>Ingredient Alerts</h6>
                        </div>
                        <div class="card-body pt-0">
                            @if (Model.CriticalLowStockMaterials.Any())
                            {
                                <ul class="list-group list-group-flush">
                                    @foreach (var item in Model.CriticalLowStockMaterials)
                                    {
                                        <li class="list-group-item bg-transparent text-white border-secondary px-0 py-2">
                                            <div class="d-flex justify-content-between mb-1">
                                                <small>@item.MaterialName</small>
                                                <small class="text-warning">Exp: @item.ExpiryDate.ToShortDateString()</small>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {

                                <p class="text-success small my-2">No critical issues</p>
                            }
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-controller="ProductionBatches" asp-action="Create" class="btn btn-outline-light p-2 border-0 text-start shadow-sm" style="background: rgba(255,255,255,0.05);"><i class="bi bi-fire text-danger me-2"></i> Start Production</a>
                        <a asp-controller="XRayChecks" asp-action="Create" class="btn btn-outline-light p-2 border-0 text-start shadow-sm" style="background: rgba(255,255,255,0.05);"><i class="bi bi-shield-check text-success me-2"></i> New Inspection</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center mt-3 pt-3">
                <div class="mb-4 animate-fade-up">
                    <div class="d-inline-block p-4 rounded-circle shadow-lg" style="background: radial-gradient(circle, rgba(16,185,129,0.2) 0%, rgba(15,23,42,0) 70%);">
                        <i class="bi bi-basket2-fill display-1 text-success"></i>
                    </div>
                </div>
                <h1 class="display-3 fw-bold text-white mb-2 animate-fade-up">Green Bowl <span class="text-success">Foods</span></h1>
                <p class="lead text-white-50 mb-5 animate-fade-up">Inventory & Quality Management System</p>
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg px-5 py-3 shadow-lg rounded-pill animate-fade-up" style="background-color: #10b981; border: none;">
                    <i class="bi bi-box-arrow-in-right me-2"></i> Employee Login
                </a>
            </div>
        }
    </div>
</div>