@model IEnumerable<GreenBowlFoodsSystem.Models.RawMaterial>

@{
    ViewData["Title"] = "Inventory";
}

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-up">
    <div>
        <h1 class="display-6 fw-bold text-white">Raw Materials</h1>
        <p class="text-white-50">Track stock levels and expiry dates.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-lg">
        <i class="bi bi-box-seam-fill me-2"></i> Add Material
    </a>
</div>

<div class="card shadow-lg border-0 animate-fade-up" style="animation-delay: 0.1s;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">Material Name</th>
                        <th>Lot Number</th>
                        <th>Stock Level</th>
                        <th>Expiry Date</th>
                        <th>Supplier</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        
                            bool isExpired = item.ExpiryDate < DateTime.Now;
                            // If expired, set text color to Red, otherwise White
                            string expiryColor = isExpired ? "text-danger fw-bold" : "text-white";
                                                
                        <tr>
                            <td class="ps-4 fw-bold">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-white bg-opacity-10 p-2 me-3 text-center" style="width:40px; height:40px;">
                                        <i class="bi bi-box-seam text-success fs-5"></i>
                                    </div>
                                    @Html.DisplayFor(modelItem => item.MaterialName)
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-secondary bg-opacity-50 rounded-pill px-3 text-white">
                                    @Html.DisplayFor(modelItem => item.LotNumber)
                                </span>
                            </td>
                            <td>
                                <span class="fw-bold text-white">
                                    @Html.DisplayFor(modelItem => item.QuantityInStock) 
                                    <span class="small text-white">@Html.DisplayFor(modelItem => item.Unit)</span>
                                </span>
                            </td>
                            <td>
                                <span class="@expiryColor">
                                    <i class="bi bi-calendar-event me-1"></i>
                                    @item.ExpiryDate.ToShortDateString()
                                </span>
                                @if(isExpired) { <span class="badge bg-danger ms-1">EXPIRED</span> }
                            </td>
                            <td>
                                <span class="text-white-50">
                                    <i class="bi bi-truck me-1"></i>
                                    @Html.DisplayFor(modelItem => item.Supplier!.SupplierName)
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="color: #38bdf8;" title="Edit">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="color: #a3e635;" title="Details">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm" style="color: #f87171;" title="Delete">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>