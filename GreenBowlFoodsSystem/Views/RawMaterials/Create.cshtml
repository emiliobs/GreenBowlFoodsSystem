@model GreenBowlFoodsSystem.Models.RawMaterial

@{
    ViewData["Title"] = "Add Material";
}

<div class="row justify-content-center">
    <div class="col-md-8">

        <div class="text-center mb-4 animate-fade-up">
            <h1 class="display-6 fw-bold text-white">Add Raw Material</h1>
            <p class="text-white">Register incoming inventory.</p>
        </div>

        <div class="card shadow-lg border-0 animate-fade-up" style="animation-delay: 0.1s;">
            <div class="card-body p-5">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="MaterialName" class="form-label text-white small fw-bold">Material Name</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                <input asp-for="MaterialName" class="form-control" placeholder="e.g. Basmati Rice" />
                            </div>
                            <span asp-validation-for="MaterialName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="LotNumber" class="form-label text-white small fw-bold">Lot Number</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-upc-scan"></i></span>
                                <input asp-for="LotNumber" class="form-control" placeholder="e.g. L-2026-X" />
                            </div>
                            <span asp-validation-for="LotNumber" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="QuantityInStock" class="form-label text-white small fw-bold">Quantity</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-123"></i></span>
                                <input asp-for="QuantityInStock" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="QuantityInStock" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="Unit" class="form-label text-white small fw-bold">Unit</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-speedometer2"></i></span>
                                <input asp-for="Unit" class="form-control" placeholder="Kg, Liters, etc." />
                            </div>
                            <span asp-validation-for="Unit" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ExpiryDate" class="form-label text-white small fw-bold">Expiry Date</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-calendar-date"></i></span>
                            <input asp-for="ExpiryDate"  class="form-control text-white" />
                        </div>
                        <span asp-validation-for="ExpiryDate" class="text-danger small"></span>
                    </div>

                    <div class="mb-5">
                        <label asp-for="SupplierId" class="form-label text-white small fw-bold">Supplier</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-truck"></i></span>

                            <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId" style="background-color: rgba(15, 23, 42, 0.6); color: white;">
                                <option value="" disabled selected>-- Select a Supplier --</option>
                            </select>
                        </div>
                        <span asp-validation-for="SupplierId" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-plus-circle me-2"></i> Add to Inventory
                        </button>
                        <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">
                            <i class="bi bi-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}