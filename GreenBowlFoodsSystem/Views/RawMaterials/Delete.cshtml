@model GreenBowlFoodsSystem.Models.RawMaterial

@{
    ViewData["Title"] = "Delete Material";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="text-center mb-4 animate-fade-up">
            <h1 class="display-6 fw-bold text-danger">Remove Material?</h1>
            <p class="text-muted">Confirm removal from inventory.</p>
        </div>

        <div class="card shadow-lg animate-fade-up" style="animation-delay: 0.1s; border: 1px solid rgba(220, 38, 38, 0.3);">
            <div class="card-body p-5 text-center">

                <div class="mb-4">
                    <div class="rounded-circle bg-danger bg-opacity-10 p-4 d-inline-block">
                        <i class="bi bi-trash3-fill text-danger display-4"></i>
                    </div>
                </div>

                <h3 class="text-white mb-2">@Html.DisplayFor(model => model.MaterialName)</h3>
                <p class="badge bg-secondary font-monospace mb-4">LOT: @Html.DisplayFor(model => model.LotNumber)</p>

                <div class="p-3 rounded mb-4 text-start" style="background: rgba(0,0,0,0.2);">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-white small">STOCK</span>
                        <span class="text-white">@Html.DisplayFor(model => model.QuantityInStock) @Html.DisplayFor(model => model.Unit)</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-white small">SUPPLIER</span>
                        <span class="text-white">@Html.DisplayFor(model => model.Supplier!.SupplierName)</span>
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-lg text-white" style="background-color: #dc3545; border-radius: 50px;">
                            <i class="bi bi-trash-fill me-2"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>