@model GreenBowlFoodsSystem.Models.Shipment

@{
    ViewData["Title"] = "Shipment Details";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="text-center mb-3">
            <h1 class="display-6 fw-bold text-white">Shipment Details Manifest</h1>
            <p class="text-warning font-monospace">Number:@(Model.TrackingNumber ?? "PENDING-TRK")</p>
        </div>

        <div class="card shadow-lg border-0 animate-fade-up" style="animation-delay: 0.1s;">

            <div class="card-header bg-transparent border-0 text-center pt-4">
                @if (Model.Status == "Shipped")
                {
                    <span class="badge bg-success fs-5 px-4 py-2 rounded-pill shadow">
                        <i class="bi bi-truck me-2"></i> Shipped
                    </span>
                }
                else if (Model.Status == "Delivered")
                {
                    <span class="badge bg-primary fs-5 px-4 py-2 rounded-pill shadow">
                        <i class="bi bi-check-circle-fill me-2"></i> Delivered
                    </span>
                }
                else
                {
                    <span class="badge bg-warning text-dark fs-5 px-4 py-2 rounded-pill shadow">
                        <i class="bi bi-hourglass-split me-2"></i> Pending
                    </span>
                }
            </div>

            <div class="card-body p-3">

                <div class="row mb-4 border-bottom border-secondary pb-3">
                    <div class="col-md-6 border-end border-secondary">
                        <h6 class="text-info text-uppercase small fw-bold mb-3">Destination</h6>
                        <div class="d-flex align-items-center mb-2">
                            <div class="bg-dark rounded-circle p-2 me-3 text-info border border-secondary">
                                <i class="bi bi-buildings fs-4"></i>                              
                            </div>
                            <div>
                                <h4 class="text-white mb-0">@Model.Customer?.CustomerName</h4>
                                <small class="text-white d-block">@Model.Customer?.BillingAddress</small>
                                <small class="text-white">@Model.Customer?.Phone</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 ps-md-3 mt-3 mt-md-0">
                        <h6 class="text-info text-uppercase small fw-bold mb-3">Logistics Info</h6>
                        <ul class="list-unstyled text-white">
                            <li class="mb-3">
                                <i class="bi bi-calendar-event text-info me-2"></i>
                                <span class="fw-bold">Date:</span> @Model.Date.ToLongDateString()
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-send text-info me-2"></i>
                                <span class="fw-bold">Carrier:</span> @Model.Carrier
                            </li>
                            <li>
                                <i class="bi bi-upc-scan text-info me-2"></i>
                                <span class="fw-bold">Tracking:</span> @(Model.TrackingNumber ?? "Not Assigned")
                            </li>
                        </ul>
                    </div>
                </div>

                <h6 class="text-warning text-uppercase small fw-bold mb-3">Cargo Contents</h6>

                <div class="bg-dark rounded p-4 border border-secondary d-flex justify-content-between align-items-center mb-4">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-box-seam fs-1 text-warning me-3"></i>
                        <div>
                            <span class="d-block text-white fw-bold fs-5">@Model.FinishedProduct?.ProductName</span>
                            <small class="text-white">SKU: @Model.FinishedProduct?.SKU</small>
                        </div>
                    </div>
                    <div class="text-end">
                        <span class="d-block text-warning font-monospace fs-3 fw-bold">@Model.QuantityShipped</span>
                        <small class="text-info text-uppercase">Units</small>
                    </div>
                </div>

                @if (Model.TotalValue > 0)
                {
                    <div class="text-end">
                        <small class="text-white text-uppercase">Total Declared Value</small>
                        <h2 class="text-warning fw-bold font-monospace">@Model.TotalValue.ToString("C2")</h2>
                    </div>
                }

            </div>

           <div class="d-grid gap-1 text-center">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 rounded-pill ms-5 me-5 shadow-sm" style="background-color: #10b981; border: none;">
                    <i class="bi bi-pencil-square me-2"></i> Edit / Correct
                </a>
                <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center ms-5 mt-2 me-5 mb-4">
                    <i class="bi bi-arrow-left me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>