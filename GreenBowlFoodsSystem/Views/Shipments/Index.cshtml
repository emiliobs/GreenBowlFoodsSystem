@model IEnumerable<GreenBowlFoodsSystem.Models.Shipment>

@{
    ViewData["Title"] = "Shipments Log";
}

<div class="d-none d-print-block text-center mb-4">
    <h1>Logistics & Shipments Report</h1>
    <p>Generated: @DateTime.Now.ToString("dd MMM yyyy HH:mm")</p>
    <hr />
</div>

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-up d-print-none">
    <div>
        <h1 class="display-6 fw-bold text-white mb-0">Shipments & Sales</h1>
        <p class="text-white-50">Track outgoing inventory and revenue.</p>
    </div>
    <div class="d-flex gap-2">
        <button onclick="window.print()" class="btn btn-outline-info rounded-pill px-4 me-2">
            <i class="bi bi-printer-fill me-2"></i> Print Log
        </button>
        <a asp-action="Create" class="btn btn-primary shadow-lg rounded-pill px-4" style="background-color: #10b981; border: none;">
            <i class="bi bi-plus-lg me-2"></i> New Shipment
        </a>
    </div>
</div>

<div class="card bg-transparent border-0 mb-4 animate-fade-up d-print-none" style="animation-delay: 0.05s;">
    <form asp-action="Index" method="get">
        <div class="input-group shadow-sm">
            <span class="input-group-text bg-dark border-secondary text-white-50">
                <i class="bi bi-search"></i>
            </span>
            <input type="text" name="searchString" class="form-control bg-dark border-secondary text-white" 
                   placeholder="Search Customer, Tracking # or Product..." 
                   value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-outline-success text-white">Search</button>
            <a asp-action="Index" class="btn btn-outline-success text-white align-content-center">Clean</a>
        </div>
    </form>
</div>

<div class="card shadow-lg border-0 animate-fade-up" style="animation-delay: 0.1s;">
    <div class="card-body p-0">
        <div class="table-responsive p-3">
            <table class="table table-hover align-middle mb-0 table-print" id="shipmentsTable">
                <thead class="text-white-50 text-uppercase small">
                    <tr>
                        <th class="ps-4 py-3">Date</th>
                        <th>Customer</th>
                        <th>Product</th>
                        <th class="text-end">Qty</th>
                        <th class="text-end">Value</th>
                        <th class="text-center">Status</th>
                        <th class="text-end pe-4 d-print-none">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex flex-column">
                                         <span class="fw-bold text-white text-print-dark">@item.Date.ToShortDateString()</span>
                                        @if (!string.IsNullOrEmpty(item.TrackingNumber))
                                        {
                                            <small class="text-info font-monospace text-print-dark" style="font-size: 0.75rem;">
                                                <i class="bi bi-upc-scan me-1 d-print-none"></i> @item.TrackingNumber
                                            </small>
                                        }
                                    </div>
                                </td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-dark border border-secondary d-flex justify-content-center align-items-center me-3 d-print-none" style="width:35px; height:35px;">
                                            <i class="bi bi-buildings text-info mb-2 fs-5"></i>
                                        </div>
                                        <div>
                                            <span class="d-block text-white fw-bold text-print-dark">@item.Customer?.CustomerName</span>
                                            <small class="text-info text-print-dark">via @item.Carrier</small>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <span class="text-info text-print-dark">
                                        <i class="bi bi-bag-heart-fill text-info fs-5 d-print-none"></i>
                                        @item.FinishedProduct?.ProductName
                                    </span>
                                </td>

                                <td class="text-end">
                                    <span class="badge bg-secondary font-monospace text-warning badge-print">
                                        -@item.QuantityShipped
                                    </span>
                                </td>

                                <td class="text-end">
                                    <span class="text-warning fw-bold font-monospace text-print-dark">
                                        £@item.TotalValue.ToString("N2")
                                    </span>
                                </td>

                                <td class="text-center">
                                    <span class="badge bg-dark border border-success text-success rounded-pill px-3 badge-print">
                                        @item.Status
                                    </span>
                                </td>

                                <td class="text-end pe-4 d-print-none">     
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="color: #38bdf8;" title="Edit">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="color: #a3e635;" title="Details">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm" style="color: #f87171;" title="Delete">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#shipmentsTable').DataTable({
                "paging": true,          // Enable pagination
                "lengthChange": false,   // Hide "Show X records" dropdown
                "searching": false,      // Disable client-side search (we use server-side)
                "ordering": true,        // Enable column sorting
                "info": true,            // Show "Showing 1 of X"
                "autoWidth": false,
                "pageLength": 5,         // Show 5 records per page
                "language": {
                    "emptyTable": "No shipments found"
                }
            });
        });
    </script>
}

<style>
    /* Estilos de Impresión */
    @@media print {
         body { background-color: white !important; color: black !important; }
        .card { box-shadow: none !important; border: 1px solid #ddd !important; }
        .text-white, .text-white-50, .text-info, .text-warning { color: black !important; }
        .text-print-dark { color: black !important; }
        .badge { border: 1px solid #000; color: black !important; background: none !important; }
        .d-print-none { display: none !important; }
        .table { color: black !important; }
        thead th { background-color: #f0f0f0 !important; color: black !important; border-bottom: 2px solid #000; }
        /* Ocultar elementos de DataTables al imprimir */
        .dataTables_wrapper .dataTables_filter, .dataTables_paginate, .dataTables_info { display: none !important; }
    }
</style>