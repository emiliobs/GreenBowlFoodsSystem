@model GreenBowlFoodsSystem.Models.Invoice

@{
    ViewData["Title"] = "Edit Invoice";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg animate-fade-up border-0" style="background-color: #1e293b; border-radius: 20px;">
            <div class="card-body p-5">
                <h3 class="fw-bold text-white mb-4">Edit Invoice</h3>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="InvoiceNumber" class="form-label text-white fw-bold small">Invoice Number</label>
                        <input asp-for="InvoiceNumber" class="form-control bg-dark text-white border-secondary" readonly />
                    </div>

                    <div class="mb-3">
                        <label asp-for="CustomerId" class="form-label text-white fw-bold small">Customer</label>
                        <select asp-for="CustomerId" class="form-select bg-dark text-white border-secondary" asp-items="ViewBag.CustomerId"></select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Date" class="form-label text-white fw-bold small">Date</label>
                        <input asp-for="Date" class="form-control bg-dark text-white border-secondary" />
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="TotalAmount" class="form-label text-white fw-bold small">Total</label>
                            <input asp-for="TotalAmount" class="form-control bg-dark text-white border-secondary" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Status" class="form-label text-white fw-bold small">Status</label>
                            <select asp-for="Status" class="form-select bg-dark text-white border-secondary">
                                <option value="Unpaid">Unpaid</option>
                                <option value="Paid">Paid</option>
                                <option value="Overdue">Overdue</option>
                            </select>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow fw-bold">Save Changes</button>
                        <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">
                            <i class="bi bi-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>