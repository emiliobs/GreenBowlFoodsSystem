@model GreenBowlFoodsSystem.Models.Invoice

@{
    ViewData["Title"] = "Delete Invoice";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg animate-fade-up border-0" style="background-color: #1e293b; border-radius: 20px;">
            <div class="card-body p-5 text-center">

                <div class="mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-danger bg-opacity-10" style="width: 80px; height: 80px;">
                        <i class="bi bi-trash3-fill text-danger display-4"></i>
                    </div>
                </div>

                <h2 class="fw-bold text-white mb-3">Delete Invoice?</h2>
                <p class="text-white-50 mb-4">
                    Are you sure you want to delete Invoice <span class="text-white fw-bold">@Model.InvoiceNumber</span>?
                    <br>This action cannot be undone.
                </p>

                <div class="p-3 rounded-3 mb-4 text-start" style="background-color: #0f172a;">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-white fw-bold small">Customer:</span>
                        <span class="text-info fw-bold">@Model.Customer?.CustomerName</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-white fw-bold small">Amount:</span>
                        <span class="text-warning fw-bold">£@Model.TotalAmount.ToString("N2")</span>
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow fw-bold">Yes, Delete it</button>
                        <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">
                            <i class="bi bi-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>