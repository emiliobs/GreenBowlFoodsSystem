@model IEnumerable<GreenBowlFoodsSystem.Models.Invoice>

@{
    ViewData["Title"] = "Financial Records";
}

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-up">
    <div>
        <h1 class="text-white fw-bold mb-0">Financial Invoices Records</h1>
        <p class="text-white-50 mb-0">Manage customer billing and revenue.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-lg rounded-pill px-4">
        <i class="bi bi-plus-lg me-2"></i>Create Invoice
    </a>
</div>

<div class="row mb-4 animate-fade-up">
    <div class="col-md-4">
        <div class="card border-0 bg-success bg-opacity-10 h-100 rounded-4">
            <div class="card-body d-flex align-items-center p-4">
                <div class="rounded-circle bg-success bg-opacity-25 p-3 me-3">
                    <i class="bi bi-cash-coin text-info fs-3"></i>
                </div>
                <div>
                    <h6 class="text-info text-uppercase small mb-1 fw-bold">Total Revenue</h6>
                    <h3 class="text-warning fw-bold mb-0">£@Model.Sum(i => i.TotalAmount).ToString("N2")</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-lg border-0 animate-fade-up" style="background-color: #1e293b; border-radius: 15px;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-dark table-hover mb-0 align-middle" style="background-color: transparent;">
                <thead class="bg-black bg-opacity-25 text-uppercase text-white-50 small">
                    <tr>
                        <th class="ps-4 py-3">Invoice Number</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Total Amount</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 text-info fw-bold font-monospace">@item.InvoiceNumber</td>
                            <td>@item.Date.ToString("yyyy-MM-dd")</td>
                            <td class="text-white fw-bold">@item.Customer?.CustomerName</td>
                            <td>
                                @if (item.Status == "Paid")
                                {
                                    <span class="badge bg-success text-dark rounded-pill px-3"><i class="bi bi-check-circle-fill me-1"></i> Paid</span>
                                }
                                else if (item.Status == "Overdue")
                                {
                                    <span class="badge bg-danger text-white rounded-pill px-3"><i class="bi bi-exclamation-circle-fill me-1"></i> Overdue</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark rounded-pill px-3"><i class="bi bi-hourglass-split me-1"></i> Unpaid</span>
                                }
                            </td>
                            <td class="text-end pe-4 text-warning fw-bold font-monospace">
                                £@item.TotalAmount.ToString("N2")
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="color: #38bdf8;" title="Edit">
                                    <i class="bi bi-pencil-fill"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="color: #a3e635;" title="Details">
                                    <i class="bi bi-eye-fill"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm" style="color: #f87171;" title="Delete">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>