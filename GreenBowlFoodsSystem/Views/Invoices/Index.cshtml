@model IEnumerable<GreenBowlFoodsSystem.Models.Invoice>

@{
    ViewData["Title"] = "Financial Records";
}

<div class="d-none d-print-block text-center mb-4">
    <h1>Financial Sales Report</h1>
    <h3>Total Revenue: £@ViewBag.TotalRevenue?.ToString("N2")</h3>
    <p>Generated: @DateTime.Now.ToString("dd MMM yyyy HH:mm")</p>
    <hr />
</div>

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-up d-print-none">
    <div>
        <h1 class="text-white fw-bold mb-0">Financial Invoices</h1>
        <p class="text-white-50 mb-0">Manage customer billing and revenue.</p>
    </div>
    <div class="d-flex gap-2">
        <button onclick="window.print()" class="btn btn-outline-info rounded-pill px-4 me-2">
            <i class="bi bi-printer-fill me-2"></i> Print Report
        </button>
        <a asp-action="Create" class="btn btn-primary shadow-lg rounded-pill px-4">
            <i class="bi bi-plus-lg me-2"></i> Create Invoice
        </a>
    </div>
</div>

<div class="row mb-4 animate-fade-up d-print-none">
    <div class="col-md-4">
        <div class="card border-0 bg-success bg-opacity-10 h-100 rounded-4">
            <div class="card-body d-flex align-items-center p-4">
                <div class="rounded-circle bg-success bg-opacity-25 p-3 me-3">
                    <i class="bi bi-cash-coin text-info fs-3"></i>
                </div>
                <div>
                    <h6 class="text-info text-uppercase small mb-1 fw-bold">Total Revenue</h6>
                    <h3 class="text-warning fw-bold mb-0">£@ViewBag.TotalRevenue?.ToString("N2")</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card bg-transparent border-0 mb-4 animate-fade-up d-print-none" style="animation-delay: 0.05s;">
    <form asp-action="Index" method="get">
        <div class="input-group shadow-sm">
            <span class="input-group-text bg-dark border-secondary text-white-50">
                <i class="bi bi-search"></i>
            </span>
            <input type="text" name="searchString" class="form-control bg-dark border-secondary text-white" 
                   placeholder="Search Invoice # or Customer..." 
                   value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-outline-success text-white">Search</button>
            <a asp-action="Index" class="btn btn-outline-success text-white align-content-center">Clean</a>
        </div>
    </form>
</div>

<div class="card shadow-lg border-0 animate-fade-up" style="background-color: #1e293b; border-radius: 15px;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-dark table-hover mb-0 align-middle table-print" id="myTable" style="background-color: transparent;">
                <thead class="bg-black bg-opacity-25 text-uppercase text-white-50 small">
                    <tr>
                        <th class="ps-4 py-3">Invoice #</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Amount</th>
                        <th class="text-end pe-4 d-print-none">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 text-info fw-bold font-monospace text-print-dark">
                                @Html.DisplayFor(modelItem => item.InvoiceNumber)
                            </td>
                            <td class="text-print-dark">
                                @item.Date.ToString("yyyy-MM-dd")
                            </td>
                            <td class="text-white fw-bold text-print-dark">
                                @Html.DisplayFor(modelItem => item.Customer!.CustomerName)
                            </td>
                            <td>
                                @if (item.Status == "Paid")
                                {
                                    <span class="badge bg-success text-dark rounded-pill px-3 badge-print">
                                        <i class="bi bi-check-circle-fill me-1 d-print-none"></i> Paid
                                    </span>
                                }
                                else if (item.Status == "Overdue")
                                {
                                    <span class="badge bg-danger text-white rounded-pill px-3 badge-print">
                                        <i class="bi bi-exclamation-circle-fill me-1 d-print-none"></i> Overdue
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark rounded-pill px-3 badge-print">
                                        <i class="bi bi-hourglass-split me-1 d-print-none"></i> Unpaid
                                    </span>
                                }
                            </td>
                            <td class="text-end pe-4 text-warning fw-bold font-monospace text-print-dark">
                                £@item.TotalAmount.ToString("N2")
                            </td>
                            
                            <td class="text-end pe-4 d-print-none">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="color: #38bdf8;" title="Edit">
                                    <i class="bi bi-pencil-fill"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="color: #a3e635;" title="Details">
                                    <i class="bi bi-eye-fill"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm" style="color: #f87171;" title="Delete">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts  {
    <script>
         // $('#myTable').DataTable();
        $(document).ready(function () {
            $('#myTable').DataTable({
                "paging": true,          // Activa paginación
                "lengthChange": true,   // Oculta el "Ver 10 registros"
                "searching": false,       // Activa buscador (puedes quitar el tuyo si quieres)
                "ordering": true,        // Activa ordenamiento por columnas
                "info": true,            // Muestra "Showing 1 of 10"
                "autoWidth": true,
                "pageLength": 5,        // Registros por página
                "lengthMenu": [[5, 10, 25, 50, -1],[5, 10, 25, 50, "All"]],
                "language": {
                    "search": "",        // Quita la palabra "Search:"
                    "searchPlaceholder": "Filter records..."
                }
            });
        });
    </script>
}

<style>
    /* Estilos de Impresión */
    @@media print {
         body { background-color: white !important; color: black !important; }
        .card { box-shadow: none !important; border: 1px solid #ddd !important; }
        .text-white, .text-white-50, .text-info, .text-warning { color: black !important; }
        .text-print-dark { color: black !important; }
        .badge { border: 1px solid #000; color: black !important; background: none !important; }
        .d-print-none { display: none !important; }
        .table { color: black !important; }
        thead th { background-color: #f0f0f0 !important; color: black !important; border-bottom: 2px solid #000; }
        /* Ocultar elementos de DataTables al imprimir */
        .dataTables_wrapper .dataTables_filter, .dataTables_paginate, .dataTables_info { display: none !important; }
    }
</style>