@model IEnumerable<GreenBowlFoodsSystem.Models.FinishedProduct>

@{
    ViewData["Title"] = "Product Catalog";
}

<div class="d-none d-print-block text-center mb-4">
    <h1>Inventory Report</h1>
    <p>Generated: @DateTime.Now.ToString("dd MMM yyyy HH:mm")</p>
    <hr />
</div>

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-up d-print-none">
    <div>
        <h1 class="display-6 fw-bold text-white">Finished Products</h1>
        <p class="text-white-50">Manage ready-to-eat meals and pricing.</p>
    </div>
    <div class="d-flex gap-2">
        <button onclick="window.print()" class="btn btn-outline-info rounded-pill px-4 me-2">
                    <i class="bi bi-printer-fill me-2"></i> Print Report
                </button>
        
        <a asp-action="Create" class="btn btn-primary shadow-lg">
            <i class="bi bi-bag-plus-fill me-2"></i> New Product
        </a>
    </div>
</div>

<div class="card bg-transparent border-0 mb-4 animate-fade-up d-print-none" style="animation-delay: 0.05s;">
    <form asp-action="Index" method="get">
        <div class="input-group shadow-sm">
            <span class="input-group-text bg-dark border-secondary text-white-50">
                <i class="bi bi-search"></i>
            </span>
            <input type="text" name="searchString" class="form-control bg-dark border-secondary text-white" 
                   placeholder="Search Name or SKU..." 
                   value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-outline-success text-white">Search</button>
            <a asp-action="Index" class="btn btn-outline-success text-white align-content-center">Clean</a>
        </div>
       
    </form>
</div>

<div class="card shadow-lg border-0 animate-fade-up" style="animation-delay: 0.1s;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 table-print" id="myTable">
                <thead>
                    <tr>
                        <th class="ps-4">Product Name</th>
                        <th>SKU<span class="text-white fw-normal d-print-none" style="font-size:0.7em">(Stock Keeping Unit)</span></th>
                        <th>Price</th>
                        <th>Stock Status</th>
                        <th class="text-end pe-4 d-print-none">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        bool isLowStock = item.QuantityAvailable < 20;
                        string stockColor = isLowStock ? "text-danger fw-bold" : "text-info fw-bold";

                        <tr>
                            <td class="ps-4 fw-bold">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-white bg-opacity-10 p-2 me-3 text-center d-print-none" style="width:40px; height:40px;">
                                        <i class="bi bi-bag-heart-fill text-info fs-5"></i>
                                    </div>
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-secondary bg-opacity-50 text-white badge-print">
                                    @Html.DisplayFor(modelItem => item.SKU)
                                </span>
                            </td>
                            <td>
                                <span class="text-white fw-bold text-print-dark">
                                    @Html.DisplayFor(modelItem => item.UnitPrice)
                                </span>
                            </td>
                            <td>
                                <span class="@stockColor">
                                    @Html.DisplayFor(modelItem => item.QuantityAvailable) units
                                </span>
                                @if (isLowStock)
                                {
                                    <span class="badge bg-danger ms-1 badge-print-danger">LOW STOCK</span>
                                }
                            </td>
                            
                            <td class="text-end pe-4 d-print-none">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="color: #38bdf8;" title="Edit">
                                    <i class="bi bi-pencil-fill"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="color: #a3e635;" title="Details">
                                    <i class="bi bi-eye-fill"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm" style="color: #f87171;" title="Delete">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts  {
    <script>
         // $('#myTable').DataTable();
        $(document).ready(function () {
            $('#myTable').DataTable({
                "paging": true,          // Activa paginación
                "lengthChange": false,   // Oculta el "Ver 10 registros"
                "searching": false,       // Activa buscador (puedes quitar el tuyo si quieres)
                "ordering": true,        // Activa ordenamiento por columnas
                "info": true,            // Muestra "Showing 1 of 10"
                "autoWidth": true,
                "pageLength":5 ,        // Registros por página
                "language": {
                    "search": "",        // Quita la palabra "Search:"
                    "searchPlaceholder": "Filter records..."
                }
            });
        });
    </script>
}

