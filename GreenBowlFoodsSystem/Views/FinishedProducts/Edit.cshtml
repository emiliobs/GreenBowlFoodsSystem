@model GreenBowlFoodsSystem.Models.FinishedProduct

@{
    ViewData["Title"] = "Edit Finished Product";
}

<div class="row justify-content-center">
    <div class="col-md-8">

        <div class="text-center mb-4 animate-fade-up">
            <h1 class="display-6 fw-bold text-white">Edit Finished Product</h1>
            <p class="text-white">Update product details and pricing.</p>
        </div>

        <div class="card shadow-lg border-0 animate-fade-up" style="animation-delay: 0.1s;">
            <div class="card-body p-5">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="ProductName" class="form-label text-white small fw-bold">Name</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-tag-fill"></i></span>
                                <input asp-for="ProductName" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="SKU" class="form-label text-white small fw-bold">SKU</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-barcode"></i></span>
                                <input asp-for="SKU" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="UnitPrice" class="form-label text-white small fw-bold">Price (£)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-currency-pound"></i></span>
                                <input asp-for="UnitPrice" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6 mb-5">
                            <label asp-for="QuantityAvailable" class="form-label text-white small fw-bold">Current Stock</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-box-seam"></i></span>
                                <input asp-for="QuantityAvailable" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-save me-2"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">
                            <i class="bi bi-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}