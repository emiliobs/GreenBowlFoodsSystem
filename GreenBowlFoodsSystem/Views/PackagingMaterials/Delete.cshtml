@model GreenBowlFoodsSystem.Models.PackagingMaterial

@{
    ViewData["Title"] = "Delete Packaging";
}

<div class="row justify-content-center">
    <div class="col-md-5">

        <div class="card shadow-lg animate-fade-up border-0" style="background-color: #1e293b; border-radius: 20px;">
            <div class="card-body p-5 text-center">

                <div class="mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-danger bg-opacity-10" style="width: 80px; height: 80px;">
                        <i class="bi bi-trash-fill text-danger display-4"></i>
                    </div>
                </div>

                <h2 class="fw-bold text-white mb-3">Delete Item?</h2>
                <p class="text-white-50 mb-4">
                    Are you sure you want to remove
                    <span class="text-white fw-bold">"@Model.MaterialName"</span>
                    from the inventory? This action cannot be undone.
                </p>

                <div class="p-3 rounded-3 mb-4 text-start" style="background-color: #0f172a;">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-info small">Current Stock:</span>
                        <span class="text-white fw-bold">@Model.QuantityInStock units</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-info small">Supplier:</span>
                        <span class="text-white fw-bold">@Model.Supplier?.SupplierName</span>
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow-lg fw-bold">
                            <i class="bi bi-trash me-2"></i> Yes, Delete It
                        </button>
                        <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2 text-white-50 text-decoration-none">
                            Cancel
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>