@model GreenBowlFoodsSystem.Models.PackagingMaterial

@{
    ViewData["Title"] = "New Packaging";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="text-center mb-4 animate-fade-up">
            <h1 class="fw-bold text-white">New Packaging</h1>
            <p class="text-white-50">Register a new packaging item.</p>
        </div>

        <div class="card shadow-lg animate-fade-up border-0" style="background-color: #1e293b; border-radius: 20px;">
            <div class="card-body p-5">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-4">
                        <label asp-for="MaterialName" class="form-label text-white small fw-bold">Item Name</label>
                        <div class="input-group">
                            <span class="input-group-text text-info">
                                <i class="bi bi-tag-fill"></i>
                            </span>
                            <input asp-for="MaterialName" class="form-control" placeholder="e.g. Cardboard Box 20x20" />
                        </div>
                        <span asp-validation-for="MaterialName" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="QuantityInStock" class="form-label text-white small fw-bold">Initial Stock</label>
                        <div class="input-group">
                            <span class="input-group-text text-warning ">
                                <i class="bi bi-layers-fill"></i>
                            </span>
                            <input asp-for="QuantityInStock" class="form-control text-warning" placeholder="0" />
                        </div>
                        <span asp-validation-for="QuantityInStock" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="SupplierId" class="form-label text-white small fw-bold">Supplier</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-shop"></i>
                            </span>
                            <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId">
                                <option disabled selected>-- Select Supplier --</option>
                            </select>
                        </div>
                        <span asp-validation-for="SupplierId" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mt-5">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-lg fw-bold">
                            <i class="bi bi-save me-2"></i> Save Item
                        </button>
                        <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">
                            <i class="bi bi-arrow-left me-1"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}