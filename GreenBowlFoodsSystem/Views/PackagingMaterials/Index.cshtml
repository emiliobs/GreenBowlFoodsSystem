@model IEnumerable<GreenBowlFoodsSystem.Models.PackagingMaterial>

@{
    ViewData["Title"] = "Packaging Inventory";
}

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-up">
    <div>
        <h1 class="text-white fw-bold mb-0">Packaging Material Inventory</h1>
        <p class="text-white-50 mb-0">Manage boxes, bags, and labels.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-lg rounded-pill px-4">
        <i class="bi bi-plus-lg me-2"></i>New Item
    </a>
</div>

<div class="card shadow-lg border-0 animate-fade-up" style="background-color: #1e293b; border-radius: 15px;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-dark table-hover mb-0 align-middle" style="background-color: transparent;">
                <thead class="bg-black bg-opacity-25 text-uppercase text-white-50 small">
                    <tr>
                        <th class="ps-4 py-3">Material Name</th>
                        <th>Stock Level</th>
                        <th>Supplier</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="rounded p-2 me-3" style="background-color: rgba(56, 189, 248, 0.1);">
                                        <i class="bi bi-box-seam text-info fs-5"></i>
                                    </div>
                                    <span class="fw-bold text-white">@item.MaterialName</span>
                                </div>
                            </td>
                            <td>
                                @if (item.QuantityInStock < 100)
                                {
                                    <span class="badge bg-danger  text-white border border-danger px-3 py-1 rounded-pill">
                                        <i class="bi bi-exclamation-triangle me-1"></i> Low: @item.QuantityInStock Units
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success  text-white border border-success px-3 py-1 rounded-pill">
                                        <i class="bi bi-check-lg me-1"></i> @item.QuantityInStock Units
                                    </span>
                                }
                            </td>
                            <td class="text-white">
                                <i class="bi bi-shop text-info me-2"></i>@item.Supplier?.SupplierName
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="color: #38bdf8;" title="Edit">
                                        <i class="bi bi-pencil-fill"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="color: #a3e635;" title="Details">
                                        <i class="bi bi-eye-fill"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm" style="color: #f87171;"  title="Delete">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>