@model GreenBowlFoodsSystem.Models.ProductionBatch

@{
    ViewData["Title"] = "Delete Batch";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="text-center mb-4 animate-fade-up">
            <h1 class="display-6 fw-bold text-danger">Cancel Batch?</h1>
            <p class="text-white">Are you sure you want to delete this production? This action cannot be undone..</p>
        </div>

        <div class="card shadow-lg animate-fade-up" style="animation-delay: 0.1s; border: 1px solid rgba(220, 38, 38, 0.3);">
            <div class="card-body p-5 text-center">
                <h3 class="text-white mb-2">@Model.BatchNumber</h3>
                <h5 class="text-info">@Model.FinishedProduct!.ProductName</h5>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-lg text-white" style="background-color: #dc3545; border-radius: 50px;">
                            <i class="bi bi-trash-fill me-2"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>