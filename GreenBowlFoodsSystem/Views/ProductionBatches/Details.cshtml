@model GreenBowlFoodsSystem.Models.ProductionBatch
@using GreenBowlFoodsSystem.Models

@{
    ViewData["Title"] = "Batch Details";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="text-center mb-4 animate-fade-up">
            <h1 class="display-6 fw-bold text-white">Prodcution Batch Report</h1>
            <p class="text-warning font-monospace fw-bold">@Model.BatchNumber</p>
        </div>

        <div class="card shadow-lg border-0 animate-fade-up" style="animation-delay: 0.1s; background-color: #1e293b; border-radius: 20px;">
            <div class="card-body p-4">

                <div class="text-center mb-4">
                    <h2 class="text-info fw-bold">@Model.FinishedProduct!.ProductName</h2>

                    <div class="d-flex justify-content-center align-items-end gap-3 mt-3">
                        <div class="d-flex flex-column align-items-center">
                            <small class="text-white text-uppercase fw-bold mb-1" style="font-size: 0.7rem; letter-spacing: 1px;">Started</small>
                            <span class="badge bg-secondary shadow-sm">
                                <i class="bi bi-play-circle-fill me-1"></i> @Model.ProductionDate.ToString("g")
                            </span>
                        </div>

                        <div class="mb-1">
                            <i class="bi bi-arrow-right text-white-50"></i>
                        </div>

                        <div class="d-flex flex-column align-items-center">
                            <small class="text-white text-uppercase fw-bold mb-1" style="font-size: 0.7rem; letter-spacing: 1px;">Finished</small>
                            @if (Model.EndDate.HasValue)
                            {
                                <span class="badge bg-success shadow-sm">
                                    <i class="bi bi-stop-circle-fill me-1"></i> @Model.EndDate.Value.ToString("g")
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark shadow-sm">
                                    <i class="bi bi-hourglass-split me-1"></i> In Progress
                                </span>
                            }
                        </div>
                    </div>

                    <div class="mt-3">
                        <span class="badge bg-primary px-3 py-2 rounded-pill">Status: @Model.Status</span>
                    </div>
                </div>

                <div class="p-3 rounded mb-4" style="background: rgba(0,0,0,0.2);">
                    <div class="row text-center">
                        <div class="col-4 border-end border-secondary">
                            <small class="text-white d-block">TARGET</small>
                            <span class="text-info fs-4 fw-bold">@Model.TargetQuantity</span>
                        </div>
                        <div class="col-4 border-end border-secondary">
                            <small class="text-white d-block">ACTUAL</small>
                            <span class="text-success fs-4 fw-bold">@Model.QuantityProduced</span>
                        </div>
                        <div class="col-4">
                            <small class="text-white d-block">DOWNTIME</small>
                            <span class="text-warning fs-4 fw-bold">@Model.DowntimeMinutes <small class="fs-6">m</small></span>
                        </div>
                    </div>
                </div>

                <div class="mb-4 text-start">
                    <div class="text-white">
                        <small class="text-white text-uppercase fw-bold">Supervisor: </small>
                        <i class="bi bi-person-badge-fill text-info me-0"></i> @(Model.Supervisor?.UserName ?? "Unknown")
                    </div>
                </div>

                <div class="card shadow-lg border-0 mt-2 mb-4 animate-fade-up" style="background: linear-gradient(145deg, #0f172a 0%, #1e293b 100%); border-radius: 15px;">
                    <div class="card-header bg-transparent border-secondary d-flex justify-content-between align-items-center py-3">
                        <h5 class="mb-0 text-white">
                            <i class="bi bi-basket3-fill me-2 text-warning"></i>Ingredients
                        </h5>
                        @if (Model.Status != "Completed" && Model.Status != "Cancelled")
                        {
                            <a asp-controller="ProductionMaterials" asp-action="Create" asp-route-batchId="@Model.Id" class="btn btn-sm btn-outline-warning fw-bold">
                                <i class="bi bi-plus-lg me-1"></i> Add Ingredient
                            </a>
                        }
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-dark table-hover align-middle mb-0" style="background-color: transparent;">
                                <thead class="text-white-50 text-uppercase small" style="background-color: rgba(0,0,0,0.2);">
                                    <tr>
                                        <th class="ps-4">Ingredient</th>
                                        <th class="text-end">Qty Used</th>
                                        <th class="text-end pe-4">Unit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.ProductionMaterials != null && Model.ProductionMaterials.Any())
                                    {
                                        @foreach (var item in Model.ProductionMaterials)
                                        {
                                            <tr>
                                                <td class="fw-bold text-white ps-4">
                                                    <i class="bi bi-box-seam text-white-50 me-2"></i> @item.RawMaterial?.MaterialName
                                                </td>
                                                <td class="text-end font-monospace text-warning">
                                                    -@item.QuantityUsed.ToString("N2")
                                                </td>
                                                <td class="text-end text-white small pe-4">
                                                    @item.RawMaterial?.Unit
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center py-4 text-white-50">
                                                <small>No ingredients added yet.</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="card shadow-lg border-0 mb-5 animate-fade-up" style="background: linear-gradient(145deg, #0f172a 0%, #1e293b 100%); border-radius: 15px;">
                    <div class="card-header bg-transparent border-secondary d-flex justify-content-between align-items-center py-3">
                        <h5 class="mb-0 text-white">
                            <i class="bi bi-list-check me-2 text-info"></i>Production Stage Log
                        </h5>

                        @if (Model.Status != "Completed" && Model.Status != "Cancelled")
                        {
                            <a asp-controller="ProductionStage" asp-action="Create" asp-route-batchId="@Model.Id"
                               class="btn btn-sm btn-outline-info fw-bold">
                                <i class="bi bi-plus-lg me-1"></i> New Log Stage
                            </a>
                        }
                    </div>

                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-dark table-hover align-middle mb-0" style="background-color: transparent;">
                                <thead class="text-white-50 text-uppercase small" style="background-color: rgba(0,0,0,0.2);">
                                    <tr>
                                        <th class="ps-4">Stage</th>
                                        <th>Time</th>
                                        <th>Temp (°C)</th>
                                        <th style="width: 30%;">Notes</th>
                                        <th class="text-end pe-4">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.ProductionStages != null && Model.ProductionStages.Any())
                                    {
                                        @foreach (var stage in Model.ProductionStages)
                                        {
                                            <tr>
                                                <td class="ps-4">
                                                    <span class="badge bg-info  rounded-pill">
                                                        @stage.StageName
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="d-flex flex-column">
                                                        <span class="fw-bold text-white small">@stage.StartTime.ToString("HH:mm")</span>
                                                        @if (stage.EndTime.HasValue)
                                                        {
                                                            <span class="text-white-50 small">to @stage.EndTime.Value.ToString("HH:mm")</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-warning small fst-italic">In Progress...</span>
                                                        }
                                                    </div>
                                                </td>
                                                <td>
                                                    @if (stage.TemperatureCelsius.HasValue)
                                                    {
                                                        <span class="@(stage.TemperatureCelsius > 100 ? "text-danger" : "text-warning") fw-bold small">
                                                            <i class="bi bi-thermometer-half"></i> @stage.TemperatureCelsius
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-white-50 small">-</span>
                                                    }
                                                </td>
                                                <td class=" small text-white fw-bold" style="max-width: 200px;">
                                                    @(stage.Notes ?? "No notes")
                                                </td>
                                                <td class="text-end pe-4">
                                                    @if (Model.Status != "Completed")
                                                    {
                                                        <a asp-controller="ProductionStage" asp-action="Edit" asp-route-id="@stage.Id"
                                                           class="btn btn-sm text-info" title="Edit Stage">
                                                            <i class="bi bi-pencil-fill"></i> Edit
                                                        </a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center py-4 text-white-50">
                                                <div class="opacity-50 mb-2"><i class="bi bi-clipboard-data fs-3"></i></div>
                                                <small>No process stages recorded.</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center align-items-center gap-3 animate-fade-up mt-5" style="animation-delay: 0.2s;">
                    @if (Model.Status != "Completed" && Model.Status != "Cancelled")
                    {
                        <form asp-action="FinishBatch" asp-route-id="@Model.Id" id="finishForm" class="d-inline">
                            <button type="button" onclick="confirmFinish()" class="btn btn-success btn-lg shadow fw-bold px-4 rounded-pill d-inline-flex align-items-center justify-content-center">
                                <i class="bi bi-check-circle-fill me-2"></i> Complete Batch
                            </button>
                        </form>

                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg shadow fw-bold px-4 rounded-pill d-inline-flex align-items-center justify-content-center">
                            <i class="bi bi-pencil-square me-2"></i> Update Results
                        </a>
                    }
                    else
                    {
                        <span class="badge bg-success p-3 fs-6 shadow rounded-pill d-inline-flex align-items-center justify-content-center">
                            <i class="bi bi-lock-fill me-2"></i> Batch Locked (Completed)
                        </span>
                    }

                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow fw-bold px-4 rounded-pill d-inline-flex align-items-center justify-content-center">
                        <i class="bi bi-arrow-left me-2"></i> Back to List
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function confirmFinish() {
            Swal.fire({
                title: 'Finish Production?',
                text: "This will add @Model.QuantityProduced units to Finished Goods inventory and lock this batch.",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#10b981', // Green
                cancelButtonColor: '#334155',  // Dark Blue
                confirmButtonText: 'Yes, Complete it!',
                background: '#1e293b',
                color: '#ffffff'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('finishForm').submit();
                }
            })
        }
    </script>
}