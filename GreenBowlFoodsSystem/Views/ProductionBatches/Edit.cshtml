@model GreenBowlFoodsSystem.Models.ProductionBatch

@{
    ViewData["Title"] = "Update Batch";
}

<div class="row justify-content-center">
    <div class="col-md-8">

        <div class="text-center mb-4 animate-fade-up">
            <h1 class="display-6 fw-bold text-white">Update Results</h1>
            <p class="text-white-50">Log production output and downtime.</p>
        </div>

        <div class="card shadow-lg border-0 animate-fade-up" style="animation-delay: 0.1s; background: #1e293b;">
            <div class="card-body p-5">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="SupervisorId" />

                    <div class="row mb-4">
                        <div class="col-md-6 mb-4">
                            <label asp-for="BatchNumber" class="form-label text-white small fw-bold">Batch Number</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-upc text-info"></i></span>
                                <input asp-for="BatchNumber" class="form-control" placeholder="BATCH-2026-X" />
                            </div>
                            <span asp-validation-for="BatchNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="ProductionDate" class="form-label text-white small fw-bold">Production Date</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-calendar-event text-info"></i></span>
                                <input asp-for="ProductionDate" class="form-control" />
                            </div>
                            <span asp-validation-for="ProductionDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6 mb-4">
                            <label asp-for="FinishedProductId" class="form-label text-white small fw-bold">Product to Cook</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-bag-heart text-info"></i></span>
                                <select asp-for="FinishedProductId" class="form-control" asp-items="ViewBag.FinishedProductId">
                                    <option value="" disabled selected>-- Select Product --</option>
                                </select>
                            </div>
                            <span asp-validation-for="FinishedProductId" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Status" class="form-label text-white small fw-bold">Current Status</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-flag-fill text-info"></i></span>
                                <select asp-for="Status" class="form-control">
                                    <option value="Planned">Planned</option>
                                    <option value="In Progress">In Progress</option>
                                    <option value="Completed" class="text-success fw-bold">Completed</option>
                                    <option value="QA Hold" class="text-danger fw-bold">QA Hold (Quality Issue)</option>
                                    <option value="Cancelled" class="text-warning">Cancelled</option>
                                </select>
                            </div>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>
                    </div>

                    <hr class="border-secondary opacity-25 my-4" />
                    
                    <h5 class="text-info mb-3 small text-uppercase ls-1"><i class="bi bi-speedometer2 me-2"></i>Production Metrics</h5>

                    <div class="row mb-5">
                        <div class="col-md-4">
                            <label asp-for="TargetQuantity" class="form-label text-white small fw-bold">Target</label>
                            <div class="input-group">

                                <span class="input-group-text  text-info small">Units</span>
                                <input asp-for="TargetQuantity" class="form-control" />                                
                            </div>
                            <span asp-validation-for="TargetQuantity" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-4">
                            <label asp-for="QuantityProduced" class="form-label text-white small fw-bold">Actual Output</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-check-lg text-info"></i></span>
                                <input asp-for="QuantityProduced" class="form-control" />
                            </div>
                            <span asp-validation-for="QuantityProduced" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-4">
                            <label asp-for="DowntimeMinutes" class="form-label text-white small fw-bold">Downtime</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-exclamation-triangle-fill text-info"></i></span>
                                <input asp-for="DowntimeMinutes" class="form-control" />
                                <span class="input-group-text small">Min</span>
                            </div>
                            <span asp-validation-for="DowntimeMinutes" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg shadow-lg hover-scale" style="background-color: #10b981; border: none;">
                            <i class="bi bi-save me-2"></i> Update Results
                        </button>
                        <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">
                            <i class="bi bi-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}