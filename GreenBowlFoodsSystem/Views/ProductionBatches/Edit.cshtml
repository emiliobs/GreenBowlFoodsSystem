@model GreenBowlFoodsSystem.Models.ProductionBatch

@{
    ViewData["Title"] = "Update Batch";
}

<div class="row justify-content-center">
    <div class="col-md-8">

        <div class="text-center mb-4 animate-fade-up">
            <h1 class="display-6 fw-bold text-white">Update Batch</h1>
            <p class="text-white">Log production output and downtime.</p>
        </div>

        <div class="card shadow-lg border-0 animate-fade-up" style="animation-delay: 0.1s;">
            <div class="card-body p-5">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="BatchNumber" class="form-label text-white small fw-bold">Batch #</label>
                            <input asp-for="BatchNumber" class="form-control" readonly style="background-color: rgba(255,255,255,0.1); color:white;" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ProductionDate" class="form-label text-white small fw-bold">Date</label>
                            <input asp-for="ProductionDate" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="FinishedProductId" class="form-label text-white small fw-bold">Product</label>
                            <select asp-for="FinishedProductId" class="form-control" asp-items="ViewBag.FinishedProductId" style="background-color: rgba(15, 23, 42, 0.6); color: white;"></select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="SupervisorId" class="form-label text-white small fw-bold">Supervisor</label>
                            <select asp-for="SupervisorId" class="form-control" asp-items="ViewBag.SupervisorId" style="background-color: rgba(15, 23, 42, 0.6); color: white;"></select>
                        </div>
                    </div>

                    <hr class="border-secondary my-4" />
                    <h5 class="text-info mb-3"><i class="bi bi-speedometer me-2"></i>Production Results</h5>

                    <div class="row mb-4">
                        <div class="col-md-4">
                            <label asp-for="TargetQuantity" class="form-label text-white small fw-bold">Target</label>
                            <input asp-for="TargetQuantity" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="QuantityProduced" class="form-label text-white small fw-bold">Actual Output</label>
                            <div class="input-group">
                                <span class="input-group-text text-success"><i class="bi bi-check-circle"></i></span>
                                <input asp-for="QuantityProduced" class="form-control fw-bold" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="DowntimeMinutes" class="form-label text-white small fw-bold">Downtime (min)</label>
                            <div class="input-group">
                                <span class="input-group-text text-warning"><i class="bi bi-exclamation-triangle"></i></span>
                                <input asp-for="DowntimeMinutes" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="mb-5">
                        <label asp-for="Status" class="form-label text-white small fw-bold">Current Status</label>
                        <select asp-for="Status" class="form-control" style="background-color: rgba(15, 23, 42, 0.6); color: white;">
                            <option value="Planned">Planned</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Completed">Completed</option>
                            <option value="QA Hold">QA Hold (Quality Issue)</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-save me-2"></i> Update Results
                        </button>
                        <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}