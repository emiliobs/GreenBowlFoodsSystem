@model GreenBowlFoodsSystem.Models.Supplier

@{
    ViewData["Title"] = "Supplier Details";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="text-center mb-4 animate-fade-up">
            <h1 class="display-6 fw-bold text-white">Supplier Profile</h1>
            <p class="text-muted">Detailed vendor information.</p>
        </div>

        <div class="card shadow-lg border-0 animate-fade-up" style="animation-delay: 0.1s;">
            <div class="card-body p-5">

                <div class="text-center mb-5">
                    <div class="rounded-circle bg-white bg-opacity-10 p-4 d-inline-block shadow-sm">
                        <i class="bi bi-buildings text-info display-4"></i>
                    </div>
                    <h2 class="mt-3 fw-bold text-white">@Html.DisplayFor(model => model.SupplierName)</h2>
                    <span class="badge bg-success bg-opacity-75 rounded-pill px-3">Active Partner</span>
                </div>

                <div class="row g-3">
                    <div class="col-12">
                        <div class="p-3 rounded mb-2" style="background: rgba(0,0,0,0.2);">
                            <label class="small text-white text-uppercase fw-bold ls-1 mb-1">Contact Person</label>
                            <div class="text-white d-flex align-items-center">
                                <i class="bi bi-person-circle me-2 text-white-50"></i>
                                @Html.DisplayFor(model => model.ContactPerson)
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-3 rounded h-100" style="background: rgba(0,0,0,0.2);">
                            <label class="small text-white text-uppercase fw-bold ls-1 mb-1">Email</label>
                            <div class="text-white small">@Html.DisplayFor(model => model.Email)</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-3 rounded h-100" style="background: rgba(0,0,0,0.2);">
                            <label class="small text-white text-uppercase fw-bold ls-1 mb-1">Phone</label>
                            <div class="text-white small">@Html.DisplayFor(model => model.Phone)</div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-5">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-lg shadow-sm">
                        <i class="bi bi-pencil-square me-2"></i> Edit Profile
                    </a>
                    <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">
                        <i class="bi bi-arrow-left me-2"></i> Back to List
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>