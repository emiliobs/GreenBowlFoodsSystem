@model IEnumerable<GreenBowlFoodsSystem.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-up">
    <div>
        <h1 class="display-6 fw-bold text-white">Suppliers Directory</h1>
        <p class="text-white-50">Manage your raw material partners.</p>
    </div>

    <a asp-action="Create" class="btn btn-primary shadow-lg">
        <i class="bi bi-building-add me-2"></i> Register Supplier
    </a>
</div>

<div class="card shadow-lg border-0 animate-fade-up" style="animation-delay: 0.1s;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">Supplier Name</th>
                        <th>Contact Person</th>
                        <th>Contact Info</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-white bg-opacity-10 p-2 me-3 text-center" style="width:40px; height:40px;">
                                        <i class="bi bi-truck text-info fs-5"></i>
                                    </div>
                                    @Html.DisplayFor(modelItem => item.SupplierName)
                                </div>
                            </td>
                            <td>
                                <span class="text-white">
                                    <i class="bi bi-person me-1 text-muted"></i>
                                    @Html.DisplayFor(modelItem => item.ContactPerson)
                                </span>
                            </td>
                            <td>
                                <div class="d-flex flex-column small">
                                    <span class="text-white-50 mb-1">
                                        <i class="bi bi-envelope me-2"></i>@Html.DisplayFor(modelItem => item.Email)
                                    </span>
                                    <span class="text-white-50">
                                        <i class="bi bi-telephone me-2"></i>@Html.DisplayFor(modelItem => item.Phone)
                                    </span>
                                </div>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="color: #38bdf8;" title="Edit">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="color: #a3e635;" title="Details">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm" style="color: #f87171;" title="Delete">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>