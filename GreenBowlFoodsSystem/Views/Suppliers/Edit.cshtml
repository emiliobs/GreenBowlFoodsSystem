@model GreenBowlFoodsSystem.Models.Supplier

@{
    ViewData["Title"] = "Edit Supplier";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="text-center mb-4 animate-fade-up">
            <h1 class="display-6 fw-bold text-white">Edit Supplier</h1>
            <p class="text-white">Update contact details for this partner.</p>
        </div>

        <div class="card shadow-lg border-0 animate-fade-up" style="animation-delay: 0.1s;">
            <div class="card-body p-5">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4">
                        <label asp-for="SupplierName" class="form-label text-white small text-uppercase fw-bold ls-1">Company Name</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-building"></i></span>
                            <input asp-for="SupplierName" class="form-control" />
                        </div>
                        <span asp-validation-for="SupplierName" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ContactPerson" class="form-label text-white small text-uppercase fw-bold ls-1">Contact Person</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input asp-for="ContactPerson" class="form-control" />
                        </div>
                        <span asp-validation-for="ContactPerson" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Phone" class="form-label text-white small text-uppercase fw-bold ls-1">Phone</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                            <input asp-for="Phone" class="form-control" />
                        </div>
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>

                    <div class="mb-5">
                        <label asp-for="Email" class="form-label text-white small text-uppercase fw-bold ls-1">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-save me-2"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">
                            <i class="bi bi-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}