@model GreenBowlFoodsSystem.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="text-center mb-4 animate-fade-up">
            <h1 class="display-6 fw-bold text-danger">Remove Supplier?</h1>
            <p class="text-muted">Are you sure? This will remove the partner from the system.</p>
        </div>

        <div class="card shadow-lg animate-fade-up" style="animation-delay: 0.1s; border: 1px solid rgba(220, 38, 38, 0.3);">
            <div class="card-body p-5 text-center">

                <div class="mb-4">
                    <div class="rounded-circle bg-danger bg-opacity-10 p-4 d-inline-block">
                        <i class="bi bi-exclamation-triangle-fill text-danger display-4"></i>
                    </div>
                </div>

                <h3 class="text-white mb-3">@Html.DisplayFor(model => model.SupplierName)</h3>

                <div class="p-3 rounded mb-4 text-start" style="background: rgba(0,0,0,0.2);">
                    <div class="d-flex justify-content-between border-bottom border-secondary pb-2 mb-2">
                        <span class="text-white small">CONTACT</span>
                        <span class="text-white">@Html.DisplayFor(model => model.ContactPerson)</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-white small">EMAIL</span>
                        <span class="text-white">@Html.DisplayFor(model => model.Email)</span>
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-lg text-white" style="background-color: #dc3545; border-radius: 50px;">
                            <i class="bi bi-trash-fill me-2"></i> Confirm Delete
                        </button>

                        <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>