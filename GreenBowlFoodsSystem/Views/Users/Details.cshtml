@model GreenBowlFoodsSystem.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="text-center mb-4 animate-fade-up">
            <h1 class="fw-bold text-white">User Profile</h1>
            <p class="text-white-50">Detailed system information.</p>
        </div>

        <div class="card shadow-lg animate-fade-up" style="animation-delay: 0.1s; background-color: #1e293b; border: 1px solid rgba(255, 255, 255, 0.1);">
            <div class="card-body p-5 text-center">

                <div class="mb-4">
                    <div class="rounded-circle bg-success bg-opacity-10 p-4 d-inline-block">
                        <i class="bi bi-person-fill text-success display-4"></i>
                    </div>
                </div>

                <h2 class="text-white fw-bold mb-2">@Model.FullName</h2>

                @if (Model.Role == "Admin")
                {
                    <span class="badge bg-warning text-dark rounded-pill px-3 mb-4">Admin Access</span>
                }
                else
                {
                    <span class="badge bg-secondary text-white rounded-pill px-3 mb-4">Staff Member</span>
                }

                <div class="text-start bg-dark bg-opacity-50 p-4 rounded-3 border border-secondary border-opacity-25 mb-4">

                    <div class="mb-3 border-bottom border-secondary border-opacity-25 pb-2">
                        <label class="text-white-50 small text-uppercase ls-1">Email / Login</label>
                        <p class="text-white fw-bold mb-0">@Model.Email</p>
                    </div>

                    <div class="mb-3 border-bottom border-secondary border-opacity-25 pb-2">
                        <label class="text-white-50 small text-uppercase ls-1">Phone</label>
                        <p class="text-white mb-0">@(Model.PhoneNumber ?? "Not Provided")</p>
                    </div>

                    <div class="mb-0">
                        <label class="text-white-50 small text-uppercase ls-1">System ID</label>
                        <p class="text-white-50 font-monospace mb-0">@Model.Id</p>
                    </div>

                </div>

                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-lg text-white shadow-lg fw-bold" style="background-color: #f59e0b; border-radius: 50px;">
                        <i class="bi bi-pencil-fill me-2"></i> Edit Profile
                    </a>
                    <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">
                        Back to List
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>