@model GreenBowlFoodsSystem.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="text-center mb-4 animate-fade-up">
            <h1 class="display-6 fw-bold text-white">User Details</h1>
            <p class="text-muted">View full account information.</p>
        </div>

        <div class="card shadow-lg border-0 animate-fade-up" style="animation-delay: 0.1s;">
            <div class="card-body p-5">

                <div class="text-center mb-5">
                    <div class="rounded-circle bg-white bg-opacity-10 p-4 d-inline-block shadow-sm">
                        <i class="bi bi-person-badge text-success display-4"></i>
                    </div>
                    <h2 class="mt-3 fw-bold text-white">@Html.DisplayFor(model => model.Username)</h2>

                    @if (Model.Role == "Admin")
                    {
                        <span class="badge bg-warning text-dark rounded-pill px-3 shadow-sm">Admin Access</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary text-white rounded-pill px-3 shadow-sm">Staff Member</span>
                    }
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="p-3 rounded h-100" style="background: rgba(0,0,0,0.2);">
                            <label class="small text-muted text-uppercase fw-bold ls-1 mb-1">User ID</label>
                            <div class="text-white font-monospace">#@Html.DisplayFor(model => model.Id)</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-3 rounded h-100" style="background: rgba(0,0,0,0.2);">
                            <label class="small text-muted text-uppercase fw-bold ls-1 mb-1">Password</label>
                            <div class="text-white d-flex align-items-center">
                                <span class="me-2">••••••••</span>
                                <i class="bi bi-lock-fill text-white-50 small"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-5">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-lg shadow-sm">
                        <i class="bi bi-pencil-square me-2"></i> Edit Profile
                    </a>

                    <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">
                        <i class="bi bi-arrow-left me-2"></i> Back to List
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>