@model GreenBowlFoodsSystem.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="text-center mb-4 animate-fade-up">
            <h1 class="display-6 fw-bold text-danger">Delete User?</h1>
            <p class="text-white">Are you sure you want to delete this user? This action cannot be undone.</p>
        </div>

        <div class="card shadow-lg animate-fade-up" style="animation-delay: 0.1s; border: 1px solid rgba(220, 38, 38, 0.3); background-color: #1e293b;">
            <div class="card-body p-5 text-center">

                <div class="mb-4">
                    <div class="rounded-circle bg-danger bg-opacity-10 p-4 d-inline-block">
                        <i class="bi bi-person-x-fill text-danger display-4"></i>
                    </div>
                </div>

                <h3 class="text-white mb-1">@Model.FullName</h3>

                @if (Model.Role == "Admin")
                {
                    <span class="badge bg-warning text-dark rounded-pill px-3 mb-4">Admin Role</span>
                }
                else
                {
                    <span class="badge bg-secondary text-white rounded-pill px-3 mb-4">Staff Role</span>
                }

                <div class="p-3 rounded mb-4" style="background: rgba(0,0,0,0.2);">
                    <p class="mb-0 text-white-50 small text-uppercase">Email / Login ID</p>
                    <p class="text-white fw-bold mb-0">@Model.Email</p>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-lg text-white shadow-lg" style="background-color: #dc3545; border-radius: 50px;">
                            <i class="bi bi-trash-fill me-2"></i> Confirm Delete
                        </button>

                        <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>