@model GreenBowlFoodsSystem.Models.User

@{
    ViewData["Title"] = "Create User";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="text-center mb-4 animate-fade-up">
            <h1 class="display-6 fw-bold text-white">Create New User</h1>
            <p class="text-white">Fill in the details to register a new system user.</p>
        </div>

        <div class="card shadow-lg border-0 animate-fade-up" style="animation-delay: 0.1s;">
            <div class="card-body p-5">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-4">
                        <label asp-for="Username" class="form-label text-white small text-uppercase fw-bold ls-1">Username</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0 text-success">
                                <i class="bi bi-person-fill"></i>
                            </span>
                            <input asp-for="Username" class="form-control border-start-0 ps-0" placeholder="e.g. jdoe" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="form-label text-white small text-uppercase fw-bold ls-1">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0 text-success">
                                <i class="bi bi-key-fill"></i>
                            </span>
                            <input asp-for="Password" type="password" class="form-control border-start-0 ps-0" placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-5">
                        <label asp-for="Role" class="form-label text-white small text-uppercase fw-bold ls-1">System Role</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0 text-success">
                                <i class="bi bi-shield-lock-fill"></i>
                            </span>
                            <select asp-for="Role" class="form-control border-start-0 ps-0" style="background-color: rgba(15, 23, 42, 0.6); color: white;">
                                <option value="" disabled selected>Select a role...</option>
                                <option value="Admin">Admin (Full Access)</option>
                                <option value="Staff">Staff (Inventory Only)</option>
                            </select>
                        </div>
                        <span asp-validation-for="Role" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-check-lg me-2"></i> Create Account
                        </button>

                        <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">
                            <i class="bi bi-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}