@model IEnumerable<GreenBowlFoodsSystem.Models.Shipment>

@{
    ViewData["Title"] = "Logistics & Shipment Report";
    // Metrics for the summary cards
    var totalShipments = Model.Count();
    decimal totalValue = Model.Sum(s => s.TotalValue);
}

<div class="row mb-4 d-print-none animate-fade-up">
    <div class="col-md-6">
        <div class="card bg-primary text-white shadow-sm border-0">
            <div class="card-body text-center">
                <h3 class="fw-bold">@totalShipments</h3>
                <small class="text-uppercase fw-bold">Total Shipments Dispatched</small>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-success text-white shadow-sm border-0">
            <div class="card-body text-center">
                <h3 class="fw-bold">@totalValue.ToString("C")</h3>
                <small class="text-uppercase fw-bold">Total Logistic Value</small>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="text-white d-print-none"><i class="bi bi-truck me-2"></i> Logistics Audit Log</h3>
    
    <div class="d-flex gap-2 d-print-none">
        <a asp-action="Index" class="btn btn-outline-light rounded-pill px-4">
            <i class="bi bi-arrow-left me-2"></i> Back to Reports
        </a>
        
        <button onclick="window.print()" class="btn btn-primary rounded-pill px-4">
            <i class="bi bi-printer-fill me-2"></i> Print Report
        </button>
    </div>
</div>

<div class="d-none d-print-block text-center mb-4">
    <h1>Green Bowl Foods - Logistics Report</h1>
    <h3>Full Shipment & Distribution Audit</h3>
    <p>Generated on: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
    <hr />
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Shipment Date</th>
                        <th>Customer</th>
                        <th>Product</th>
                        <th class="text-center">Carrier</th>
                        <th class="text-center">Tracking #</th>
                        <th class="text-center">Vehicle Check</th>
                        <th class="text-end">Value</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.Date.ToString("dd MMM yyyy")</td>
                                <td>@item.Customer?.CustomerName</td>
                                <td><small>@item.FinishedProduct?.ProductName</small></td>
                                <td class="text-center text-muted">@item.Carrier</td>
                                <td class="text-center font-monospace">
                                    <span class="badge bg-secondary">@(item.TrackingNumber ?? "N/A")</span>
                                </td>
                                <td class="text-center">
                                    @if (item.DeliveryForm != null)
                                    {
                                        <span class="text-success fw-bold"><i class="bi bi-shield-check"></i> OK</span>
                                    }
                                    else
                                    {
                                        <span class="text-warning small"><i class="bi bi-shield-slash"></i> No Check</span>
                                    }
                                </td>
                                <td class="text-end fw-bold text-success">£@item.TotalValue</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">No shipment data available for this period.</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr class="fw-bold fs-6">
                        <td colspan="6" class="text-end text-muted">CUMULATIVE DISPATCH VALUE:</td>
                        <td class="text-end text-warning fw-bold">£@totalValue</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<style>
    /* CSS specifically for the Coursework Print Quality */
    @@media print {
        body { 
            background-color: white !important; 
            color: black !important; 
            font-family: 'Times New Roman', serif;
        }
        .table-dark { 
            background-color: #f2f2f2 !important; 
            color: black !important; 
        }
        .table-dark th {
            border-bottom: 2px solid #000 !important;
        }
        .badge { 
            border: 1px solid #000; 
            color: black !important; 
            background: none !important; 
            font-size: 0.8rem;
        }
        .d-print-none { display: none !important; }
        .card { border: none !important; box-shadow: none !important; }
        .table { width: 100% !important; border: 1px solid #ccc; }
        footer, .btn, .navbar, .sidebar { display: none !important; }
    }
</style>