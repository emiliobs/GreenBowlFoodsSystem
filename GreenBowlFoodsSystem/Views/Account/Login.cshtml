@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-5">

        <div class="text-center mb-4">
            <h2 class="fw-bold text-white">Green Bowl <span style="color: var(--primary-green);">Foods</span></h2>
            <p class="text-white-50">Internal Management System</p>
        </div>

        <div class="card-login animate-fade-up">
            <div class="login-header">
                <h4 class="mb-0">Welcome Back 👋</h4>
            </div>

            <div class="login-body">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger bg-danger bg-opacity-10 border border-danger text-danger rounded-3">
                        <i class="fas fa-exclamation-circle me-2"></i> @ViewBag.ErrorMessage
                    </div>
                }

                <form asp-action="Login" method="post">
                    <div class="form-group mb-4">
                        <label for="Email" class="form-label">Email (Use: admin@yopmail.com) </label>
                        <input type="email" name="Email" class="form-control" placeholder="Use: admin@yopmail.com" required />
                    </div>

                    <div class="form-group mb-4">
                        <label for="Password" class="form-label">Password (Use: 123)</label>
                        <input type="Password" name="Password" class="form-control" placeholder="Use: 123" required />
                    </div>

                    <div class="d-grid gap-2 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn-back-custom">
                <span>←</span> Back to Website
            </a>
        </div>
    </div>
</div>
