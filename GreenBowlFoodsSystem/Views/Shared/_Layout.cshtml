@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GreenBowlFoodsSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-xl navbar-toggleable-xl navbar-dark border-bottom box-shadow mb-3" style="background-color: #0f172a;">
            <div class="container-fluid px-4">

                <a class="navbar-brand fw-bold fs-4 tracking-wide" style="font-style:italic; font-weight:bold;" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-heart-fill me-0" style="color: #10b981;"></i>
                    <span style="color: #ffffff;">Green Bowl</span> <span style="color: #10b981;">Foods!</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" style="border: none;">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-xl-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-speedometer2 me-2"></i> Dashboard
                            </a>
                        </li>

                        @if (HttpContextAccessor.HttpContext!.Session.GetString("UserRole") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Users" asp-action="Index">
                                    <i class="bi bi-shield-lock-fill me-2"></i> Users
                                </a>
                            </li>
                        }

                        @if (HttpContextAccessor.HttpContext!.Session.GetString("UserSession") != null)
                        {
                            <li class="nav-item border-start border-secondary mx-2 d-none d-xl-block"></li>
                            <li class="nav-item"><span class="nav-link text-white-50 small fw-bold d-xl-none mt-2">DIRECTORY</span></li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Suppliers" asp-action="Index">
                                    <i class="bi bi-truck me-2"></i> Suppliers
                                </a>
                            </li>

                            <li class="nav-item border-start border-secondary mx-2 d-none d-xl-block"></li>
                            <li class="nav-item"><span class="nav-link text-white-50 small fw-bold d-xl-none mt-2">INVENTORY</span></li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="RawMaterials" asp-action="Index">
                                    <i class="bi bi-basket-fill me-2"></i> Raw Materials
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="FinishedProducts" asp-action="Index">
                                    <i class="bi bi-bag-heart-fill me-2"></i> Products
                                </a>
                            </li>

                            <li class="nav-item border-start border-secondary mx-2 d-none d-xl-block"></li>
                            <li class="nav-item"><span class="nav-link text-white-50 small fw-bold d-xl-none mt-2">FUTURE OPS</span></li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="ProductionBatches" asp-action="Index">
                                    <i class="bi bi-fire me-2"></i> Production
                                </a>
                            </li>
                                                    

                            <li class="nav-item">
                                <a class="nav-link text-white opacity-50" href="#"><i class="bi bi-airplane-engines-fill me-2"></i> Shipping</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (HttpContextAccessor.HttpContext.Session.GetString("UserSession") != null)
                        {

                            <li class="nav-item">
                                <span class="nav-link" style="color: white !important;">
                                    Hi, <b>@HttpContextAccessor.HttpContext.Session.GetString("UserSession")</b>!
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-logout-custom btn-sm ms-2" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>

                            @* <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white fw-bold" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-2"></i> Hi, @Context.Session.GetString("UserSession")!
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark shadow-lg" style="background-color: #1e293b;">
                                    <li><span class="dropdown-item-text text-white-50 small">Role: @Context.Session.GetString("UserRole")</span></li>
                                    <li><hr class="dropdown-divider bg-light opacity-25"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </li> *@
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 text-center" style="border-top: 1px solid rgba(255,255,255,0.1); background: rgba(0,0,0,0.2);">
        <div class="container">
            <span class="small" style="color: var(--text-muted);">
                &copy; 2026 London
                <span class="mx-2 opacity-50">|</span>

                <i class="bi bi-heart-fill me-0" style="color: #10b981;"></i>
                <strong style="color: #10b981; font-style:italic;">Green Bowl Foods!</strong>

                <span class="mx-2 opacity-50">|</span>

                <i class="bi bi-code-slash text-white"></i> By
                <span class="fw-bold text-white">Emilio Barrera</span>

                <span class="ms-1">
                    Built with
                    <i class="bi bi-heart-fill text-danger" style="animation: heartbeat 1.5s infinite;"></i>
                </span>
            </span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    

    <script>
        // Check if the server sent a Success Message via TempData
        var successMessage = '@TempData["SuccessMessage"]';

        if (successMessage) {
            Swal.fire({
                title: 'Success!',
                text: successMessage,
                icon: 'success',
                background: '#1e293b',  // Dark Mode Background
                color: '#ffffff',       // White Text
                confirmButtonColor: '#10b981', // Green Brand Color
                confirmButtonText: 'Great!'
            });
        }

        // Check if the server sent an Error Message via TempData
        var errorMessage = '@TempData["ErrorMessage"]';

        if (errorMessage) {
            Swal.fire({
                title: 'Error!',
                text: errorMessage,
                icon: 'error',
                background: '#1e293b',
                color: '#ffffff',
                confirmButtonColor: '#ef4444', // Red Brand Color
                confirmButtonText: 'OK'
            });
        }

    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>