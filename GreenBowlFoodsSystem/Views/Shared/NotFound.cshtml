@{
    ViewData["Title"] = "Not Found";
}

<div class="d-flex align-items-center justify-content-center animate-fade-up" style="min-height: 70vh;">
    <div class="text-center col-lg-6">

        <div class="mb-4">
            <div class="d-inline-block p-4 rounded-circle shadow-lg" style="background: rgba(255, 193, 7, 0.1); border: 1px solid rgba(255, 193, 7, 0.3);">
                <i class="bi bi-search" style="font-size: 4rem; color: #ffc107;"></i>
            </div>
        </div>

        <h1 class="display-5 fw-bold text-white mb-3">Item Not Found</h1>
        <p class="lead text-white-50 mb-5">
            We couldn't locate the record you are looking for.
            <br>It might have been deleted or the ID is incorrect.
        </p>

        <a href="/" class="btn btn-outline-light btn-lg rounded-pill px-5 shadow-sm">
            <i class="bi bi-arrow-left me-2"></i> Go Back Home
        </a>

    </div>
</div>