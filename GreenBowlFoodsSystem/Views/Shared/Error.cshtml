@model ErrorViewModel
@{
    ViewData["Title"] = "System Error";
}

<div class="d-flex align-items-center justify-content-center animate-fade-up" style="min-height: 70vh;">
    <div class="text-center col-lg-6">

        <div class="mb-4">
            <div class="d-inline-block p-4 rounded-circle shadow-lg" style="background: rgba(220, 53, 69, 0.1); border: 1px solid rgba(220, 53, 69, 0.3);">
                <i class="bi bi-cone-striped" style="font-size: 4rem; color: #dc3545;"></i>
            </div>
        </div>

        <h1 class="display-5 fw-bold text-white mb-3">System Malfunction</h1>
        <p class="lead text-white-50 mb-5">
            An unexpected condition was encountered while processing your request.
            <br>The operation has been terminated for security.
        </p>

        @if (Model.ShowRequestId)
        {
            <div class="card border-0 shadow-lg mx-auto mb-5 text-start" style="background: #1e293b; border-left: 4px solid #dc3545;">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-terminal text-danger me-2"></i>
                        <h6 class="text-white fw-bold text-uppercase small mb-0">Diagnostic Trace Information</h6>
                    </div>

                    <p class="text-white-50 small mb-3">
                        Please quote this ID if contacting IT Support regarding this incident.
                    </p>

                    <div class="bg-black bg-opacity-50 p-3 rounded border border-secondary border-opacity-25 d-flex justify-content-between align-items-center">
                        <code class="text-info font-monospace fs-5">@Model.RequestId</code>
                        <i class="bi bi-clipboard text-secondary" style="cursor: pointer;" title="Copy ID"></i>
                    </div>
                </div>
            </div>
        }

        <div class="d-grid gap-3 d-sm-flex justify-content-center">
            <a href="/" class="btn btn-primary btn-lg shadow-lg rounded-pill px-5" style="background-color: #10b981; border: none;">
                <i class="bi bi-arrow-left me-2"></i> Return to Dashboard
            </a>

            <button onclick="location.reload();" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                <i class="bi bi-arrow-clockwise me-2"></i> Retry
            </button>
        </div>

    </div>
</div>