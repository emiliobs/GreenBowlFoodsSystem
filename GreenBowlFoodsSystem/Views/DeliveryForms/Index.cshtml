@model IEnumerable<GreenBowlFoodsSystem.Models.DeliveryForm>

@{
    ViewData["Title"] = "Delivery Log";
}

<div class="d-none d-print-block text-center mb-4">
    <h1>Vehicle Inspection & Delivery Log</h1>
    <p>Generated: @DateTime.Now.ToString("dd MMM yyyy HH:mm")</p>
    <hr />
</div>

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-up d-print-none">
    <div>
        <h1 class="text-white fw-bold mb-0">Delivery Form Log</h1>
        <p class="text-white-50 mb-0">Manage outbound vehicle checks.</p>
    </div>
    <div class="d-flex gap-2">
        <button onclick="window.print()" class="btn btn-outline-info rounded-pill px-4 me-2">
            <i class="bi bi-printer-fill me-2"></i> Print Log
        </button>
        <a asp-action="Create" class="btn btn-primary shadow-lg rounded-pill px-4">
            <i class="bi bi-truck me-2"></i> New Dispatch
        </a>
    </div>
</div>

<div class="card bg-transparent border-0 mb-4 animate-fade-up d-print-none" style="animation-delay: 0.05s;">
    <form asp-action="Index" method="get">
        <div class="input-group shadow-sm">
            <span class="input-group-text bg-dark border-secondary text-white-50">
                <i class="bi bi-search"></i>
            </span>
            <input type="text" name="searchString" class="form-control bg-dark border-secondary text-white" 
                   placeholder="Search Trailer #, Driver or Approver..." 
                   value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-outline-success text-white">Search</button>
            <a asp-action="Index" class="btn btn-outline-success text-white align-content-center">Clean</a>
        </div>
       
    </form>
</div>

<div class="card shadow-lg border-0 animate-fade-up" style="background-color: #1e293b; border-radius: 15px;">
    <div class="card-body p-0">
        <div class="table-responsive p-3">
            <table class="table table-dark table-hover mb-0 align-middle table-print" id="deliveryTable" style="background-color: transparent;">
                <thead class="bg-black bg-opacity-25 text-uppercase text-white-50 small">
                    <tr>
                        <th class="ps-4 py-3">Date</th>
                        <th>Trailer Number</th>
                        <th>Driver</th>
                        <th>Checks</th>
                        <th>Approved By</th>
                        <th class="text-end pe-4 d-print-none">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 text-white fw-bold text-print-dark">@item.CheckDate.ToString("yyyy-MM-dd")</td>
                            
                            <td>
                                <span class="badge bg-secondary text-white badge-print">@item.TrailerNumber</span>
                            </td>
                            
                            <td class="text-white text-print-dark">@item.DriverName</td>
                            
                            <td>
                                @if (item.IsTempOk && item.IsClean)
                                {
                                    <span class="badge bg-primary px-2 fw-bold rounded-pill badge-print">
                                        <i class="bi bi-check-all me-1 d-print-none"></i> Passed
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger px-2 rounded-pill badge-print">
                                        <i class="bi bi-exclamation-triangle me-1 d-print-none"></i> Failed
                                    </span>
                                }
                            </td>
                            
                            <td class="text-info text-print-dark">
                                <i class="bi bi-person-check me-1 d-print-none"></i> @item.ApprovedBy?.UserName
                            </td>
                            
                            <td class="text-end pe-4 d-print-none">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="color: #38bdf8;" title="Edit">
                                    <i class="bi bi-pencil-fill"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="color: #a3e635;" title="Details">
                                    <i class="bi bi-eye-fill"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm" style="color: #f87171;" title="Delete">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#deliveryTable').DataTable({
                "paging": true,          // Enable pagination
                "lengthChange": false,   // Hide "Show X records" dropdown
                "searching": false,      // Disable client-side search (we use server-side)
                "ordering": true,        // Enable column sorting
                "info": true,            // Show "Showing X of Y"
                "autoWidth": false,
                "pageLength": 5,         // Show 5 records per page
                "language": {
                    "emptyTable": "No delivery records found"
                }
            });
        });
    </script>
}

<style>
    /* Estilos de Impresión */
    @@media print {
         body { background-color: white !important; color: black !important; }
        .card { box-shadow: none !important; border: 1px solid #ddd !important; }
        .text-white, .text-white-50, .text-info, .text-warning { color: black !important; }
        .text-print-dark { color: black !important; }
        .badge { border: 1px solid #000; color: black !important; background: none !important; }
        .d-print-none { display: none !important; }
        .table { color: black !important; }
        thead th { background-color: #f0f0f0 !important; color: black !important; border-bottom: 2px solid #000; }
        /* Ocultar elementos de DataTables al imprimir */
        .dataTables_wrapper .dataTables_filter, .dataTables_paginate, .dataTables_info { display: none !important; }
    }
</style>