@model IEnumerable<GreenBowlFoodsSystem.Models.DeliveryForm>

@{
    ViewData["Title"] = "Delivery Log";
}

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-up">
    <div>
        <h1 class="text-white fw-bold mb-0">Delivery Form Log</h1>
        <p class="text-white-50 mb-0">Manage outbound vehicle checks.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-lg rounded-pill px-4">
        <i class="bi bi-truck me-2"></i>New Dispatch
    </a>
</div>

<div class="card shadow-lg border-0 animate-fade-up" style="background-color: #1e293b; border-radius: 15px;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-dark table-hover mb-0 align-middle" style="background-color: transparent;">
                <thead class="bg-black bg-opacity-25 text-uppercase text-white-50 small">
                    <tr>
                        <th class="ps-4 py-3">Date</th>
                        <th>Trailer Number</th>
                        <th>Driver</th>
                        <th>Checks</th>
                        <th>Approved By</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 text-white fw-bold">@item.CheckDate.ToString("yyyy-MM-dd")</td>
                            <td><span class="badge bg-secondary text-white">@item.TrailerNumber</span></td>
                            <td class="text-white">@item.DriverName</td>
                            <td>
                                @if (item.IsTempOk && item.IsClean)
                                {
                                    <span class="badge bg-primary px-2 fw-bold rounded-pill">
                                        <i class="bi bi-check-all me-1"></i> Passed
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger px-2 rounded-pill">
                                        <i class="bi bi-exclamation-triangle me-1"></i> Failed
                                    </span>
                                }
                            </td>
                            <td class="text-info">
                                <i class="bi bi-person-check me-1"></i> @item.ApprovedBy?.UserName
                            </td>
                            <td class="text-end pe-4">
                                <a  asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="color: #38bdf8;" title="Edit">
                                    <i class="bi bi-pencil-fill"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="color: #a3e635;" title="Details">
                                    <i class="bi bi-eye-fill"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm" style="color: #f87171;" title="Delete">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>