@model GreenBowlFoodsSystem.Models.DeliveryForm

@{
    ViewData["Title"] = "New Dispatch";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="text-center mb-4 animate-fade-up">
            <h1 class="fw-bold text-white">New Dispatch</h1>
            <p class="text-white-50">Vehicle check & Load assignment.</p>
        </div>

        <div class="card shadow-lg animate-fade-up border-0" style="background-color: #1e293b; border-radius: 20px;">
            <div class="card-body p-5">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <h5 class="text-white mb-3 border-bottom border-secondary pb-2"><i class="bi bi-truck me-2 text-warning"></i>Vehicle Info</h5>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="TrailerNumber" class="form-label text-white small fw-bold">Trailer Number</label>
                            <input asp-for="TrailerNumber" class="form-control bg-dark text-white border-secondary" placeholder="e.g. TR-5544" />
                            <span asp-validation-for="TrailerNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DriverName" class="form-label text-white small fw-bold">Driver Name</label>
                            <input asp-for="DriverName" class="form-control bg-dark text-white border-secondary" />
                            <span asp-validation-for="DriverName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input class="form-check-input bg-success" type="checkbox" asp-for="IsTempOk" checked>
                                <label class="form-check-label text-white" asp-for="IsTempOk">Temperature OK (< 4°C)</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input class="form-check-input bg-success" type="checkbox" asp-for="IsClean" checked>
                                <label class="form-check-label text-white" asp-for="IsClean">Trailer Clean / Pest Free</label>
                            </div>
                        </div>
                    </div>

                    <h5 class="text-white mb-3 border-bottom border-secondary pb-2 mt-5"><i class="bi bi-box-seam me-2 text-info"></i>Assign Shipments</h5>
                    <div class="mb-4">
                        <p class="text-white-50 small">Select the shipments loaded onto this truck:</p>
                        @if (ViewBag.PendingShipments != null)
                        {
                            <select name="selectedShipmentIds" class="form-select bg-dark text-white border-secondary" multiple style="height: 150px;">
                                @foreach (var item in (MultiSelectList)ViewBag.PendingShipments)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <small class="text-white">Hold Ctrl to select multiple shipments.</small>
                        }
                        else
                        {
                            <p class="text-warning">No pending shipments found. Create a shipment first.</p>
                        }
                    </div>

                    <div class="d-grid gap-2 mt-5">
                        <button type="submit" class="btn btn-success btn-lg rounded-pill shadow-lg fw-bold">
                            <i class="bi bi-send-check me-2"></i> Approve Dispatch
                        </button>
                        <a asp-action="Index" class="btn btn-back-custom text-center justify-content-center mt-2">
                            <i class="bi bi-arrow-left me-1"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}